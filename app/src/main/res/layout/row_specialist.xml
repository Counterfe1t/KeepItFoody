<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    android:orientation="vertical"
    android:layout_margin="3dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageViewSpecialist"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@android:color/white"
            android:src="@drawable/ic_vector_specialist"
            android:layout_margin="16dp"/>

        <TextView
            android:id="@+id/textViewFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageViewSpecialist"
            android:text="Name Surname"
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/textViewProfession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profession"
            android:textSize="14sp"
            android:layout_below="@+id/textViewFullName"
            android:layout_toRightOf="@id/imageViewSpecialist"/>

        <TextView
            android:id="@+id/textViewSpecialization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specialization"
            android:layout_below="@id/textViewProfession"
            android:layout_toRightOf="@id/imageViewSpecialist" />


        <ImageView
            android:id="@+id/optionMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_vector_more"
            android:tint="@color/colorGray"
            android:layout_margin="16dp"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>