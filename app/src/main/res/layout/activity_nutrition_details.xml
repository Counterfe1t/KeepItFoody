<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".NutritionDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="4dp">

                <LinearLayout
                    android:id="@+id/linearLayoutDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:srcCompat="@drawable/ic_vector_calendar"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/textViewDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DD-MM-RRRR"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Energia" />

                        <TextView
                            android:id="@+id/energy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_toLeftOf="@+id/energyUnit"
                            android:layout_marginRight="5dp"
                            />

                        <TextView
                            android:id="@id/energyUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="kcal"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"
                        android:layout_marginVertical="5dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Białko" />

                        <TextView
                            android:id="@+id/protein"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_toLeftOf="@+id/proteinUnit"
                            android:layout_marginRight="5dp"
                            />

                        <TextView
                            android:id="@id/proteinUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="g"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"
                        android:layout_marginVertical="5dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tłuszcz" />

                        <TextView
                            android:id="@+id/fats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_toLeftOf="@+id/fatsUnit"
                            android:layout_marginRight="5dp"
                            />

                        <TextView
                            android:id="@id/fatsUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="g"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"
                        android:layout_marginVertical="5dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Węglowodany" />

                        <TextView
                            android:id="@+id/carbohydrates"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_toLeftOf="@+id/carbohydratesUnit"
                            android:layout_marginRight="5dp"
                            />

                        <TextView
                            android:id="@id/carbohydratesUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="g"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"
                        android:layout_marginVertical="5dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Błonnik" />

                        <TextView
                            android:id="@+id/fibre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_toLeftOf="@+id/fibreUnit"
                            android:layout_marginRight="5dp"
                            />

                        <TextView
                            android:id="@id/fibreUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="g"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"
                        android:layout_marginVertical="5dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sól" />

                        <TextView
                            android:id="@+id/salt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_toLeftOf="@+id/saltUnit"
                            android:layout_marginRight="5dp"
                            />

                        <TextView
                            android:id="@id/saltUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="g"/>

                    </RelativeLayout>

                </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textViewEnergyHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Energia"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textViewEnergy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 / 2000 kcal"
                    android:textSize="18sp"
                    android:layout_above="@+id/progressBarEnergy"
                    android:layout_alignParentRight="true" />

                <ProgressBar
                    android:id="@+id/progressBarEnergy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="?android:progressBarStyleHorizontal"
                    android:layout_below="@+id/textViewEnergyHeader"
                    android:progress="50"
                    android:progressTint="@color/colorPrimary"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/textViewEnergyPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/progressBarEnergy"
                    android:layout_toLeftOf="@id/textViewEnergyPercentageDummy" />

                <TextView
                    android:id="@+id/textViewEnergyPercentageDummy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" %"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/progressBarEnergy"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:id="@+id/textViewEnergyMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewEnergyPercentage"
                    android:visibility="gone"
                    android:textColor="@android:color/holo_red_dark" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textViewProteinHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Białko"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textViewProtein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 / 75 g"
                    android:textSize="18sp"
                    android:layout_above="@+id/progressBarProtein"
                    android:layout_alignParentRight="true" />

                <ProgressBar
                    android:id="@+id/progressBarProtein"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="?android:progressBarStyleHorizontal"
                    android:layout_below="@+id/textViewProteinHeader"
                    android:progress="50"
                    android:progressTint="@color/colorPrimary"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/textViewProteinPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/progressBarProtein"
                    android:layout_toLeftOf="@id/textViewProteinPercentageDummy" />

                <TextView
                    android:id="@+id/textViewProteinPercentageDummy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" %"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/progressBarProtein"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:id="@+id/textViewProteinMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewProteinPercentage"
                    android:visibility="gone"
                    android:textColor="@android:color/holo_red_dark" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textViewCarbohydratesHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Węglowodany"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textViewCarbohydrates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 / 75 g"
                    android:textSize="18sp"
                    android:layout_above="@+id/progressBarCarbohydrates"
                    android:layout_alignParentRight="true" />

                <ProgressBar
                    android:id="@+id/progressBarCarbohydrates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="?android:progressBarStyleHorizontal"
                    android:layout_below="@+id/textViewCarbohydratesHeader"
                    android:progress="50"
                    android:progressTint="@color/colorPrimary"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/textViewCarbohydratesPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/progressBarCarbohydrates"
                    android:layout_toLeftOf="@id/textViewCarbohydratesPercentageDummy" />

                <TextView
                    android:id="@+id/textViewCarbohydratesPercentageDummy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" %"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/progressBarCarbohydrates"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:id="@+id/textViewCarbohydratesMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewCarbohydratesPercentage"
                    android:visibility="gone"
                    android:textColor="@android:color/holo_red_dark" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textViewFatsHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tłuszcze"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textViewFats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 / 75 g"
                    android:textSize="18sp"
                    android:layout_above="@+id/progressBarFats"
                    android:layout_alignParentRight="true" />

                <ProgressBar
                    android:id="@+id/progressBarFats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="?android:progressBarStyleHorizontal"
                    android:layout_below="@+id/textViewFatsHeader"
                    android:progress="50"
                    android:progressTint="@color/colorPrimary"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/textViewFatsPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/progressBarFats"
                    android:layout_toLeftOf="@id/textViewFatsPercentageDummy" />

                <TextView
                    android:id="@+id/textViewFatsPercentageDummy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" %"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/progressBarFats"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:id="@+id/textViewFatsMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewFatsPercentage"
                    android:visibility="gone"
                    android:textColor="@android:color/holo_red_dark" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>